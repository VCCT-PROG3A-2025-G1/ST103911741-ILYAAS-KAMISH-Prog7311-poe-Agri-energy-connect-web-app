@model Prog7311_poe.Models.FarmerRegistrationViewModel
@{
    ViewData["Title"] = "Add Farmer";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg">
            <div class="card-header bg-success text-white">
                <h2 class="animate__animated animate__fadeIn">Add New Farmer</h2>
            </div>
            <div class="card-body">
                <form asp-action="AddFarmer" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <h4 class="mb-3">Farmer Details</h4>
                    <div class="mb-3">
                        <label asp-for="Farmer.Name" class="form-label">Farmer Name</label>
                        <input asp-for="Farmer.Name" class="form-control" />
                        <span asp-validation-for="Farmer.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Farmer.Location" class="form-label">Location</label>
                        <input asp-for="Farmer.Location" class="form-control" />
                        <span asp-validation-for="Farmer.Location" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Farmer.ContactNumber" class="form-label">Contact Number</label>
                        <input asp-for="Farmer.ContactNumber" class="form-control" />
                        <span asp-validation-for="Farmer.ContactNumber" class="text-danger"></span>
                    </div>

                    <hr class="my-4">

                    <h4 class="mb-3">Login Details</h4>
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label">Username</label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg animate__animated animate__pulse animate__infinite">Add Farmer</button>
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <a asp-action="ViewFarmers" class="btn btn-outline-secondary animate__animated animate__fadeIn">Back to Farmers List</a>
            </div>
        </div>
    </div>
</div>