@model IEnumerable<Prog7311_poe.Models.Farmer>
@{
    ViewData["Title"] = "Farmers List";
}

<div class="row mb-4">
    <div class="col">
        <h2>Farmers List</h2>
    </div>
    <div class="col text-end">
        <a asp-action="AddFarmer" class="btn btn-success">Add New Farmer</a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-success">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Location)</th>
                            <th>@Html.DisplayNameFor(model => model.ContactNumber)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Location)</td>
                                <td>@Html.DisplayFor(modelItem => item.ContactNumber)</td>
                                <td>
                                    <a asp-action="ViewProducts" asp-route-farmerId="@item.FarmerId" class="btn btn-sm btn-info">
                                        View Products
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                No farmers found. <a asp-action="AddFarmer" class="alert-link">Add a new farmer</a>
            </div>
        }
    </div>
</div>