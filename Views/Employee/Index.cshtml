@{
    ViewData["Title"] = "Employee Dashboard";
}

<div class="container py-4">
    <!-- Welcome Section -->
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold text-success">Welcome to Agri-Energy Connect</h1>
        <p class="lead text-muted">Bridging farmers and energy companies for a sustainable future</p>
    </div>

    <div class="row g-4">
        <!-- Left Panel: Dashboard Actions -->
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h5 class="card-title fw-bold mb-3"><i class="bi bi-grid-3x3-gap-fill text-success"></i> Employee Dashboard</h5>
                    <p class="text-muted">Find sustainable biomass inputs from local farmers. Browse, filter, and connect with producers to secure the resources your energy company needs.</p>

                    <div class="d-grid gap-2 mt-4">
                        <a asp-action="ViewFarmers" class="btn btn-outline-success rounded-pill">
                            <i class="bi bi-people"></i> View All Farmers
                        </a>
                        <a asp-action="ViewProducts" class="btn btn-success rounded-pill">
                            <i class="bi bi-box-seam"></i> Browse All Products
                        </a>
                        <a asp-action="AddFarmer" class="btn btn-success rounded-pill">
                            <i class="bi bi-person-plus"></i> Add New Farmer
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Panel: Platform Statistics -->
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h5 class="card-title fw-bold mb-3"><i class="bi bi-bar-chart-fill text-success"></i> Platform Statistics</h5>

                    <div class="row text-center">
                        <div class="col-4">
                            <div class="mb-2">
                                <i class="bi bi-people-fill display-6 text-success"></i>
                                <div class="fw-bold mt-2">@ViewBag.FarmerCount</div>
                                <small class="text-muted">Farmers</small>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="mb-2">
                                <i class="bi bi-boxes display-6 text-primary"></i>
                                <div class="fw-bold mt-2">@ViewBag.ProductCount</div>
                                <small class="text-muted">Products</small>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="mb-2">
                                <i class="bi bi-tags-fill display-6 text-warning"></i>
                                <div class="fw-bold mt-2">@ViewBag.CategoryCount</div>
                                <small class="text-muted">Categories</small>
                            </div>
                        </div>
                    </div>

                    <!-- Optional Recent Products List -->
                    <div class="mt-4">
                        <h6 class="fw-bold">Recent Products</h6>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="fw-semibold">Vegatables</span><br />
                                    <small class="text-muted">P-Diddy - Grains</small>
                                </div>
                                <small class="text-muted">May 11</small>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="fw-semibold">Fruit</span><br />
                                    <small class="text-muted">ilyaas kamish - mangoes</small>
                                </div>
                                <small class="text-muted">May 09</small>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
